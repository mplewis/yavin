{
  "name": "yavin",
  "version": "1.0.0",
  "description": "Scan your email for treachery",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/mplewis/yavin",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "tsc -p tsconfig.json",
    "start": "concurrently --kill-others -n be,fe -c bgBlue,bgYellow 'yarn start:backend' 'yarn start:frontend'",
    "start:watch": "concurrently --kill-others -n be,fe -c bgBlue,bgYellow 'yarn start:backend:watch' 'yarn start:frontend'",
    "start:backend:watch": "nodemon -e ts --exec 'yarn start:backend'",
    "start:backend": "scripts/use_db.js dev; ts-node src/index.ts",
    "start:frontend": "cd frontend; yarn serve",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier src/**/*.ts frontend/src/**/*.ts frontend/**/*.vue --write",
    "fix:eslint": "eslint --fix src/**/*.ts frontend/src/**/*.ts frontend/src/**/*.vue",
    "test": "run-s test:jest test:lint test:frontend",
    "test:jest": "scripts/use_db.js test && jest --coverage --runInBand",
    "test:lint": "eslint src/**/*.ts",
    "test:frontend": "scripts/test_frontend.sh",
    "test:watch": "scripts/use_db.js test && jest --watch",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset test cov:check doc:html version doc:publish",
    "todo": "scripts/list_todos.sh"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=8.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.{ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "base64-js": "^1.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.3",
    "fs-extra": "^9.0.0",
    "google-auth-library": "^6.0.0",
    "googleapis": "^48.0.0",
    "js-yaml": "^3.13.1",
    "pg": "^8.0.2",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "sha.js": "^2.4.11",
    "striptags": "^3.1.1",
    "typeorm": "^0.2.24",
    "wink-porter2-stemmer": "^2.0.1"
  },
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@bitjson/typedoc": "^0.15.0-0",
    "@types/base64-js": "^1.2.5",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-fileupload": "^1.1.3",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.1",
    "@types/js-yaml": "^3.12.3",
    "@types/node": "^13.11.0",
    "@types/pug": "^2.0.4",
    "@types/stemmer": "^1.0.2",
    "@types/tmp": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "concurrently": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.6",
    "husky": ">=4",
    "jest": "^25.2.7",
    "jest-junit": "^10.0.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "open-cli": "^5.0.0",
    "prettier": "^2.0.2",
    "standard-version": "^6.0.1",
    "tmp-promise": "^2.0.2",
    "trash-cli": "^3.0.0",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "vue-eslint-parser": "^7.0.0"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/main/**/*.spec.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
